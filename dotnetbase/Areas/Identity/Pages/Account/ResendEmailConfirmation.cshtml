@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}
<div class="flex flex-col items-center justify-center min-h-screen p-4 space-y-4 antialiased t">
    
<main>
    <h1>@ViewData["Title"]</h1>
    <h2>Enter your email.</h2>
    <hr/>
    <div class="row">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" aria-required="true"/>
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="mt-3 w-100 btn btn-lg btn-primary">Resend</button>
            </form>
    </div>
</main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}